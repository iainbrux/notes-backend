{
  "name": "backend",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Iain Brookes",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd ../notes-frontend/ && yarn build --prod && cp -r build ../notes-backend",
    "deploy": "git push heroku HEAD:main",
    "deploy:full": "yarn build:ui && git add . && git commit -m uibuild && git push && yarn deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --verbose --runInBand"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.13",
    "prettier": "^2.3.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
